include ../mixins/messageMixin

div(class='chat page')
    if main
        div(class='chat__header box-shadow layout_color_main')
            a(class='link text text_size_2rem text_color_normal fas fa-arrow-circle-left' href='messages' section='messages')
            div(class='chat__header__title-and-img')
                span(class='text text_size_1-2rem text_color_normal') #{chatInfo.chatName}
                div(class='img box-shadow chat__header__title-and-img__img')
                    img(class='img__img' src=chatInfo.chatPhoto)
        include ../mixins/messages
        div(class='chat__footer box-shadow layout_color_main bottom-fixed')
            //include ../mixins/emodjiMixin
            div(class="emoji-container box-shadow display-none" id='js-emodji-container')

            div(class='chat__footer__atth')
                //span(class='link fas fa-sticky-note text text_color_normal text_size_2rem' id='js-chat-stickers')
                i(class='chat__footer__atth__link link far fa-smile-wink text text_color_normal text_size_2rem' id='js-chat-emodji')
            div(class='chat__footer__msg')
                form(action="#", class='chat__footer__msg__form' id="js-message-form")
                    textarea(class='chat__footer__msg__form__textarea input text text_color_normal text_size_1-2rem' type='text' name='text' true, id='text' placeholder='Введите свой текст' rows='2')
                    button(type="submit" id='add-post-submit' class="chat__input__button  button button_primary fas fa-paper-plane text text_color_for-buttons text_size_2rem")
                        span



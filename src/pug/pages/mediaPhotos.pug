include ../utils/photoMixin
if (main)
    div(class="main-block__album display_flex_column")
        div(class="main-block__media__header display_flex boxshadow-block main-block__layout layout_light_secondary")
            span(class="text text_size_L album-header") Альбом #{title}
            a(href="addPhotos/" + id, section="addPhotos/" + id, class="display_flex")
                <i class="text text_size_L icon icon__color__main fas fa-plus-circle"></i>
        div(class="album-body display_flex")
            each photo in body
                + photoMixin(photo)

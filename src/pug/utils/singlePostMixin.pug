mixin singlePostMixin(data)
    div(class="post width-100per boxshadow-block main-block__layout layout_light_secondary display_flex_column")
        div(class="post__header display_flex_row")
            img(class="img img_size_XS post__header__avatar display_flex_column" src=data.authorPhoto)
            div(class="post__header__data display_flex_column")
                a(href = 'user/' + data.authorUrl section = 'user/' + data.authorUrl )
                    span(class="text text_size_M text_color_black") #{data.authorName}
                span(class="text text_size_S text_color_black text_weight_light") #{data.date}
        div(class="post__body__data display_flex_column")
            div(class="post__body__text display_flex")
                a(href = 'post/' + data.id section = 'post/' + data.id)
                    span(class="text post__body__text__p text_color_black") #{data.text}
            if data.photo
                img(class="post__body__img display_flex" src=data.photo.url)
        div(class="hr-line")
        div(class="post__footer display_flex_row")
            div(class="display_flex")
                div(class="post__footer__component display_flex_row")
                    if !data.wasLike
                        i(class="js-like-post js-like-no text text_size_L post__footer__component__like display_flex fas fa-heart" Id = data.id)
                    else
                        i(class="js-like-post js-like-yes text text_size_L post__footer__component__like display_flex fas fa-heart" Id = data.id)
                    span(class="text text_size_M post__footer__component__text text_color_black text_weight_light display_flex") #{data.likes}
                    //span выше обязательно должен быть после i


<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="leftBlock">
        <img class="userAvatar" src="{ data.user.avatar }"/>
    </div>
    <div class="rightBlock" id="rightBlock">
        <div class="topDataForUserProfile">
            <div class="nameAndDateForUserProfile">
                <span class="userName"><fest:value>data.user.name</fest:value></span>
                <span class="dateOfBLabel">Date of birth: </span>
                <span class="dateOfBUser">
                    <fest:value>user.dateOfB</fest:value>.
                    <fest:value>user.monthOfB</fest:value>.
                    <fest:value>user.yearOfB</fest:value>
                </span>
            </div>
            <a class="userSettings" src="/settings">Редактировать профиль</a>
        </div>
        <fest:include context_name="data.posts" src="./../postsGenerate/postsGenerate.tmpl.xml"/>
    </div>
</fest:template>
<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="mainManu">
        <fest:for iterate="data" index="i" value="v">
            <a>
                <fest:attributes>
                    <fest:attribute name="class"><fest:value>v.cl</fest:value></fest:attribute>
                    <fest:attribute name="href">/<fest:value>v.link</fest:value></fest:attribute>
                    <fest:attribute name="data-section"><fest:value>v.link</fest:value></fest:attribute>
                </fest:attributes>
                <fest:value>v.name</fest:value>
            </a>
        </fest:for>
    </div>
</fest:template>